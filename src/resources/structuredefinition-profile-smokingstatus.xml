<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="http://example.org/fhir/StructureDefinition/profile-smokingStatus" />
  <version value="0.0.0" />
  <name value="SmokingStatus" />
  <id value="profile-smokingstatus" />
  <status value="draft" />
  <publisher value="TBD" />
  <description value="Proposed constraints and extensions on the Observation Resource. Generated as a first step toward creating a set of Canadian Core FHIR profiles. " />
  <fhirVersion value="4.0.0" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Observation" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Observation" />
  <derivation value="constraint" />
  <differential>
    <element id="Observation.status">
      <path value="Observation.status" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.code">
      <path value="Observation.code" />
      <definition value="Describes what was observed. Sometimes this is called the observation &quot;name&quot;. Value set set to extensible to support any additional pan-canadian values that may be included in pCLOCD as an expansion on LOINC." />
      <example>
        <label value="Tobacco smoking status NHIS" />
        <valueCodeableConcept>
          <coding>
            <system value="http://loinc.org" />
            <code value="72166-2" />
          </coding>
          <text value="Tobacco smoking status NHIS" />
        </valueCodeableConcept>
      </example>
      <mustSupport value="true" />
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="ObservationCode" />
        </extension>
        <strength value="extensible" />
      </binding>
    </element>
    <element id="Observation.subject">
      <path value="Observation.subject" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <!-- <profile value="http://hl7.org/fhir/ca/core/StructureDefinition/profile-patient" /> -->
        <targetProfile value="http://hl7.org/fhir/ca/core/StructureDefinition/profile-patient" />
      </type>
      <mustSupport value="true" />
    </element>
    <element id="Observation.issued">
      <path value="Observation.issued" />
      <min value="1" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.value[x]">
      <path value="Observation.valueCodeableConcept" />
      <min value="1" />
      <type>
        <code value="CodeableConcept" />
      </type>
      <example>
        <label value="Smoking Status" />
        <valueCodeableConcept>
          <coding>
            <system value="http://snomed.info/sct" />
            <code value="449868002" />
            <display value="Smokes tobacco daily" />
          </coding>
        </valueCodeableConcept>
      </example>
      <mustSupport value="true" />
      <binding>
        <strength value="extensible" />
        <description value="Smoking Status" />
        <valueSet value="http://hl7/org/fhir/ca/core/ValueSet/ca-core-observation-smokingstatus" />
      </binding>
    </element>
  </differential>
</StructureDefinition>
